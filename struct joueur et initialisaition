//voici la structure joueur avec info en plus

typedef struct joueur{

    char pseudo[30];
    char choixClasse[30];
    int PV;
    int PM;
    int PA;
    int ligne;
    int colonne;
    int cpt;
    int choixClasseVerif[3];//Permet de ne pas choisir une classe déjà sélectionnée
    int vivant;

}t_joueur;



